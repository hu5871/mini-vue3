{
  "compilerOptions": {
    "outDir": "dist",//输出的目录
    "sourceMap": true,//采用sourceMap
    "target": "es2016",//支持语法
    "module": "esnext",//模块格式
    "moduleResolution": "node",//模块解析方式
    "strict": false,//是否严格模式
    "resolveJsonModule": true,//解析json模块
    "esModuleInterop": true,//允许通过es6语法引入commonjs模块
    "jsx": "preserve",//jsx不转义
    "lib": ["esnext","dom"],//支持的类库esnext及dom
    "baseUrl": ".",//以当前路径为基准进行查找
    "paths": {
      "@vue/*":["packages/*/src"]
    }
  }
}